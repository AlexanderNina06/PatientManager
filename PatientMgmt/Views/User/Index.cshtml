@model LoginViewModel
@{
  ViewData["Title"] = "Login";
}

<section class="section is-medium">

  <div class="container">

    <div class="column is-4 is-offset-one-quarter">

      <form method="post" asp-controller="User" asp-action="Index">

        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input class="input" asp-for="UserName" type="text" placeholder="Username">
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <p class="control has-icons-left">
            <input class="input" asp-for="Password" type="password" placeholder="Password">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

        <div class="field has-text-centered">
          <p class="control is-vcentered">
            <button class="button is-vcentered is-success" type="submit">Login</button>
          </p>
        </div>

      </form>
      
    </div>
  </div>

</section>