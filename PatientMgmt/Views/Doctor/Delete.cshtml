@model SaveDoctorViewModel
@{
    ViewData["Title"] = "Delete Doctor";
}
<section>
    <div class="container">
        <div class="columns is-centered mt-5">
            <div class="column is-7">
                <div class="box">

                        <div class="is-flex is-justify-content-center is-align-items-center">
                            <h4>Are you sure you want to delete doctor <span class="title is-size-6">@Model.Name @Model.LastName</span>? </h4>
                        </div>

                    <form method="post" asp-controller="Doctor" asp-action="DeletePost">

                        <input type="hidden" asp-for="Id" />

                        <div class="field is-grouped is-grouped-centered mt-5">
                                <p class="control">
                                    <button type="submit" class="button is-danger">
                                    Delete
                                    </button>
                                </p>
                                <p class="control">
                                    <a  asp-controller="Doctor" asp-action="Index" class="button is-light">
                                    Cancel
                                    </a>
                                </p>
                        </div

                    </form>

                </div>
            </div>
        </div>
    </div>
</section>