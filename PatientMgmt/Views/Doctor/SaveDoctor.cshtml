@model SaveDoctorViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Save Doctor";
}
<section>
    <div class="container">
        <div class="columns is-centered mt-5">
            <div class="column is-7">
                <div class="box">

                        <form method="post" enctype="multipart/form-data" asp-controller="Doctor" asp-action="@(editMode ? "Edit":"Create")">

                            <div class="field">
                                <label asp-for="Name" class="label">First Name</label>
                                <div class="control">
                                <input asp-for="Name" class="input" type="text"/>
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="field">
                                <label asp-for="LastName" class="label">Last Name</label>
                                <div class="control">
                                <input asp-for="LastName" class="input" type="text"/>
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="field">
                                <label asp-for="Email" class="label">Email</label>
                                <div class="control">
                                <input asp-for="Email" class="input" type="text"/>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="field">
                                <label asp-for="IdCard" class="label">Id</label>
                                <div class="control">
                                <input asp-for="IdCard" class="input" type="text"/>
                                </div>
                                <span asp-validation-for="IdCard" class="text-danger"></span>
                            </div>

                            <div class="field">
                               <label asp-for="PictureFile" class="form-label">Choose a file: </label>
                                @if (editMode)
                                {
                                <input  asp-for="PictureFile" class="form-control" />
                                }
                                else
                                {
                                <input Required asp-for="PictureFile" class="form-control" />
                                }
                            </div>

                            <div class="field">
                                <label asp-for="Phone" class="label">Phone</label>
                                <div class="control">
                                <input asp-for="Phone" class="input" type="text"/>
                                </div>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="Id" />

                            <div class="field is-grouped is-grouped-centered">
                                <p class="control">
                                    <button type="submit" class="button is-primary">
                                    Submit
                                    </button>
                                </p>
                                <p class="control">
                                    <a  asp-controller="Doctor" asp-action="Index" class="button is-light">
                                    Cancel
                                    </a>
                                </p>
                            </div

                        </form>

                </div>
            </div>
        </div>
    </div>
</section>