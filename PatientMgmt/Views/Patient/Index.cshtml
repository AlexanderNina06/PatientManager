@model List<PatientViewModel>
@{
    ViewData["Title"] = "Patients";
}
<section class="section">

        <div class="container">
            
            <div class="buttons is-right">
                <a asp-controller="Patient" asp-action="Create" class="button is-primary is-outlined is-responsive">Add new Patient</a>
            </div>

            @if(Model == null || Model.Count == 0)
            {
                <h3 class="content has-text-centered title is-size-6">No Patients available.</h3>
            }

           <div class="columns is-multiline">
                @foreach(PatientViewModel item in Model){
                    <div class="column is-3-desktop is-6-tablet">
                        <div class="card">
                            <div class="card-image is-relative" data-path="0.0.0.0.0.0">
                                 <img class="image is-64x64 is-absolute is-bottom-0" style="left: 50%; transform: translate(-50%, 50%); border-radius: 100% !important;" src="@item.Picture" alt="alt" data-config-id="profile1">
                            </div>
                            <div class="card-content mt-4">

                                <div class="content has-text-centered">
                                    <h3 class="title is-size-5" data-config-id="name1">@item.Name @item.LastName</h3>
                                </div>
                                <div class="content">
                                    <div class="is-flex is-justify-content-center is-align-items-center">
                                    <i class="fa-solid fa-phone mr-2" style="color: #74C0FC; width="18" height="14" viewBox="0 0 18 14" fill="none"></i>
                                    <p class="is-size-6"><span class="has-text-weight-semibold">Phone: </span>@item.Phone</p>
                                    </div>
                                </div>
                                <div class="content">
                                    <div class="is-flex is-justify-content-center is-align-items-center">
                                    <i class="fa-solid fa-street-view mr-2" style="color: #74C0FC; width="18" height="14" viewBox="0 0 18 14" fill="none"></i>
                                    <p class="is-size-6"><span class="has-text-weight-semibold">Direction: </span>@item.Direction</p>
                                    </div>
                                </div>
                                <div class="content">
                                    <div class="is-flex is-justify-content-center is-align-items-center">
                                    <i class="fa-regular fa-id-card mr-2" style="color: #74C0FC; width="18" height="14" viewBox="0 0 18 14" fill="none"></i>
                                    <p class="is-size-6"><span class="has-text-weight-semibold">Id: </span>@item.IdCard</p>
                                    </div>
                                </div>
                                <div class="content">
                                    <div class="is-flex is-justify-content-center is-align-items-center">
                                    <i class="fa-solid fa-calendar-days mr-2" style="color: #74C0FC; width="18" height="14" viewBox="0 0 18 14" fill="none"></i>
                                    <p class="is-size-6"><span class="has-text-weight-semibold">Date of birth: </span>@item.DateOfBirth.ToShortDateString()</p>
                                    </div>
                                </div>
                                <div class="content">
                                    <div class="is-flex is-justify-content-center is-align-items-center">
                                    <i class="fa-solid fa-smoking mr-2" style="color: #74C0FC; width="18" height="14" viewBox="0 0 18 14" fill="none"></i>
                                    <p class="is-size-6"><span class="has-text-weight-semibold">Smoker: </span>@(item.isSmoker ? "Yes" : "No")</p>
                                    </div>
                                </div>
                                <div class="content">
                                    <div class="is-flex is-justify-content-center is-align-items-center">
                                    <i class="fa-solid fa-hand-dots mr-2" style="color: #74C0FC; width="18" height="14" viewBox="0 0 18 14" fill="none"></i>
                                    <p class="is-size-6"><span class="has-text-weight-semibold">Allergies: </span>@(item.hasAllergies ? "Yes" : "No")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="card-footer-item">
                                <a asp-controller="Patient" asp-action="Edit" asp-route-id="@item.Id" class="button is-fullwidth has-text-grey-light is-uppercase" style="border: none;" data-config-id="primary-action1" >Edit</a>
                                <a asp-controller="Patient" asp-action="Delete" asp-route-id="@item.Id" class="button is-fullwidth has-text-grey-light is-uppercase" style="border: none;" data-config-id="primary-action1" >Delete</a>
                                </div>
                            </div>

                        </div>
                    </div>
                }         
            </div>
        </div>
</section>